<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="@dimen/item_margin_16"
        android:layout_marginStart="@dimen/item_margin_16"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:scaleType="center"
            android:src="@drawable/ic_phone"
            android:tint="@color/white"
            tools:ignore="UseAppTint" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_margin_8"
        android:textColor="@color/darker_gray"
        android:textSize="@dimen/lbl_text_16"
        android:fontFamily="@font/aldrich"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_icon"
        android:text="Telefon nömrəsi:" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:layout_marginTop="@dimen/item_small_margin_4"
        android:textColor="@color/darker_gray"
        android:maxLines="2"
        android:textSize="@dimen/text_title"
        app:layout_constraintStart_toStartOf="@+id/tv_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        android:text="051 555-55-55" />


</androidx.constraintlayout.widget.ConstraintLayout>